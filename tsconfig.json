{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node16",
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "vscode"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
